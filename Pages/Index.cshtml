@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Sample Datatable using asp.net</h1>

    <div>
        <ul class="nav nav-tabs" role="tablist">
            <li class="active">
                <a href="#tab-table1" data-toggle="tab">List 1</a>
            </li>
            <li>
                <a href="#tab-table2" data-toggle="tab">List 2</a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="tab-table1">

                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Office</th>
                            <th>Extn.</th>
                            <th>Start date</th>
                            <th>Salary</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewData["DataTable1"] != null &&
                        ((System.Data.DataTable)ViewData["DataTable1"]).Rows.Count
                        > 0)
                        {
                            foreach (System.Data.DataRow row in ((System.Data.DataTable)ViewData["DataTable1"]).Rows)
                            {
                                <tr>
                                    <td>@row["Name"]</td>
                                    <td>@row["Office"]</td>
                                    <td>@row["Extn."]</td>
                                    <td>@row["Startdate"]</td>
                                    <td>@row["Salary"]</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3">No data available</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="tab-pane" id="tab-table2">
                <table id="myTable2" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Office</th>
                            <th>Extn.</th>
                            <th>Start date</th>
                            <th>Salary</th>
                        </tr>
                    </thead>
                    @if (ViewData["DataTable2"] != null && ((System.Data.DataTable)ViewData["DataTable2"]).Rows.Count
                    > 0)
                    {
                        foreach (System.Data.DataRow row in ((System.Data.DataTable)ViewData["DataTable2"]).Rows)
                        {
                            <tr>
                                <td>@row["Name"]</td>
                                <td>@row["Office"]</td>
                                <td>@row["Extn."]</td>
                                <td>@row["Startdate"]</td>
                                <td>@row["Salary"]</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">No data available</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>

    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>